# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 100

[*.sh]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[{Makefile,makefile}]
indent_style = tab
indent_size = 2

[*.txt]
insert_final_newline = false
